<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.yuriitsap.audioplayer">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <provider android:authorities="com.example.yuriitsap.audioplayer.AudioProvider"
                  android:name=".AudioProvider"
                  android:grantUriPermissions="true"
                  android:exported="true"
                  android:readPermission="de.openminds.samples.cpsample.lentitems.READ"
                  android:writePermission="de.openminds.samples.cpsample.lentitems.WRITE">
        </provider>
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service android:name=".MusicService" android:exported="true"
                 android:process=":remote"></service>

    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

</manifest>

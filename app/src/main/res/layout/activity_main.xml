<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainActivity">
    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <ListView android:id="@+id/playlist"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        </ListView>

        <LinearLayout android:id="@+id/play_controls"
                      android:orientation="vertical"
                      android:layout_alignParentBottom="true"
                      android:background="@color/play_bar_background"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <LinearLayout android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                <ImageButton android:id="@+id/previous"
                             android:src="@drawable/ic_action_previous"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

                <ImageButton android:id="@+id/backward"
                             android:src="@drawable/ic_action_rewind"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

                <ImageButton android:id="@+id/play_pause"
                             android:src="@drawable/ic_action_play"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

                <ImageButton android:id="@+id/forward"
                             android:src="@drawable/ic_action_fast_forward"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

                <ImageButton android:id="@+id/next"
                             android:src="@drawable/ic_action_next"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout android:gravity="center"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                <TextView android:id="@+id/current_song_time"
                          android:text="1:02"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>
                <SeekBar android:id="@+id/song_progress"
                         android:layout_width="240dp"
                         android:layout_height="wrap_content"/>
                <TextView android:id="@+id/song_duration_time"
                          android:text="3:56"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
